{{#if tasks}}
  <table class="tasks-table">
    <thead>
      <tr>
        <th>NÂ°</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td><strong>{{title}}</strong></td>
          <td>{{description}}</td>
          <td class="operations">
            {{#if done}}
              <a
                class="btn btn-done"
                href="/tasks/{{_id}}/toggleDone"
              >Done</a>
            {{else}}
              <a class="btn btn-undone" href="/tasks/{{_id}}/toggleDone">
                Undone
              </a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-delete">
              Delete
            </a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-edit">
              Edit
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="no-tasks">
    <h1>No tasks</h1>
  </div>
{{/if}}